<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.employee.model.Employee" abstract="true" table="employee">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="name">
			<column name="name" />
		</property>
		<property name="methodOfPay">
			<column name="methodOfPay" />
		</property>
		<property name="typeOfEmployee">
			<column name="typeOfEmployee" />
		</property>
		<property name="salary">
			<column name="salary" />
		</property>
	</class>
	<class name="com.employee.model.Manager" table="employee">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="name">
			<column name="name" />
		</property>
		<property name="methodOfPay">
			<column name="methodOfPay" />
		</property>
		<property name="typeOfEmployee">
			<column name="typeOfEmployee" />
		</property>
		<property name="salary">
			<column name="salary" />
		</property>
	</class>
	<class name="com.employee.model.OrdinaryEmployee" table="employee">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="name">
			<column name="name" />
		</property>
		<property name="methodOfPay">
			<column name="methodOfPay" />
		</property>
		<property name="typeOfEmployee">
			<column name="typeOfEmployee" />
		</property>
		<property name="salary">
			<column name="salary" />
		</property>
	</class>
	<class name="com.employee.model.Intern" table="employee">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="name">
			<column name="name" />
		</property>
		<property name="methodOfPay">
			<column name="methodOfPay" />
		</property>
		<property name="typeOfEmployee">
			<column name="typeOfEmployee" />
		</property>
		<property name="salary">
			<column name="salary" />
		</property>
	</class>
</hibernate-mapping> 
